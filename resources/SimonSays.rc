    DEFPUSHBUTTON   "OK",IDOK,113,41,50,14,WS_GROUP
END


/////////////////////////////////////////////////////////////////////////////
//
// Settings Dialog
//

IDD_SETTINGS_DIALOG DIALOGEX 0, 0, 250, 190
STYLE DS_SETFONT | DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Settings"
FONT 8, "MS Shell Dlg", 0, 0, 0x1
BEGIN
    LTEXT           "Default text:",IDC_STATIC,7,7,80,8
    EDITTEXT        IDC_SETTINGS_DEFAULT_TEXT,7,17,236,48,ES_MULTILINE | ES_AUTOVSCROLL | ES_WANTRETURN | WS_VSCROLL
    CONTROL         "Insert default text automatically",IDC_SETTINGS_USE_DEFAULT_TEXT,"Button",BS_AUTOCHECKBOX | WS_TABSTOP,7,67,180,10
    LTEXT           "Language:",IDC_STATIC,7,82,50,8
    COMBOBOX        IDC_SETTINGS_LANGUAGE_COMBO,7,92,110,70,CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    LTEXT           "Voice:",IDC_STATIC,130,82,40,8
    COMBOBOX        IDC_SETTINGS_VOICE_COMBO,130,92,113,70,CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    LTEXT           "Volume (10-100):",IDC_STATIC,7,112,80,8
    EDITTEXT        IDC_SETTINGS_VOLUME_EDIT,198,110,45,12,ES_NUMBER | WS_TABSTOP
    CONTROL         "",IDC_SETTINGS_VOLUME_SLIDER,"msctls_trackbar32",WS_TABSTOP | TBS_AUTOTICKS,7,122,186,18
    LTEXT           "Rate (-10 to 10):",IDC_STATIC,7,142,80,8
    EDITTEXT        IDC_SETTINGS_RATE_EDIT,198,140,45,12,ES_AUTOHSCROLL | WS_TABSTOP
    CONTROL         "",IDC_SETTINGS_RATE_SLIDER,"msctls_trackbar32",WS_TABSTOP | TBS_AUTOTICKS,7,152,186,18
    DEFPUSHBUTTON   "OK",IDOK,134,167,50,14
    PUSHBUTTON      "Cancel",IDCANCEL,189,167,50,14
END


